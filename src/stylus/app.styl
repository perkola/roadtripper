@import url(https://fonts.googleapis.com/css?family=Amaranth:400italic,700italic);
@import url(https://fonts.googleapis.com/css?family=Work+Sans);

//edit()

brand = tomato
white = #f0f0f0
black = #303030

font-brand   = 'Work Sans', sans-serif;
font-special = 'Amaranth', sans-serif

@import 'datepicker'

body
    margin 0
    background white
    color black
    font-family font-brand

.intro
    background tomato
    height 100%
    width 100%
    align()

    &__content
        align()

    &__title
        font-family font-special
        color white
        text-transform uppercase
        font-size 72px
        letter-spacing 2px
        margin 0
        line-height 1
        text-align center

h2
    font-family font-special
    color lighten(brand, 66%)
    font-weight 400
    margin 10px 0
    font-size 28px
    text-align center

.date-from, .date-to
    column(1/2)

.timeline
    //align(horizontal)
    position absolute
    bottom 0
    display flex
    flex-direction row
    width 100%

    &__date
        font-family font-brand
        line-height 1
        padding 10px
        flex 1
        transition all 0.25s ease

        &:nth-child(even)
            background darken(white, 5%)

        &:hover
            background brand
            cursor pointer

            span.day
                color white
                font-size 32px

            span.month
                color darken(white, 10%)

        span.day
            color tomato
            display block
            font-size 24px
            text-align center
            line-height 24px

        span.month
            color lighten(black, 30%)
            font-size 14px
            text-align center
            display block
            text-transform uppercase
            line-height 14px
