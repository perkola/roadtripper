.timeline
    position absolute
    bottom 0
    display flex
    flex-direction row
    width 100%

    &__date
        font-family font-brand
        line-height 1
        padding 10px
        flex 1
        transition all 0.25s ease
        background rgba(white, 0.75)
        border-top 10px solid darken(white, 10%)

        &:nth-child(even)
            background white

        &:hover
            background brand
            cursor pointer
            border-top 10px solid brand !important

            span.day
                color white
                font-size 32px

            span.month
                color darken(white, 10%)

        span.day
            color tomato
            display block
            font-size 22px
            text-align center
            line-height 22px

        span.month
            color lighten(black, 30%)
            font-size 14px
            text-align center
            display block
            text-transform uppercase
            line-height 14px

.color-0
    border-top 10px solid #C42E8F

.color-1
    border-top 10px solid #FFCA3C
