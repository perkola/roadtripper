.timeline
    position absolute
    bottom 0
    display flex
    flex-direction row
    width 100%

    &__date
        font-family font-brand
        line-height 1
        padding 10px
        flex 1
        transition all 0.25s ease
        background rgba(white, 0.75)

        &:nth-child(even)
            background white

        &:hover
            background brand
            cursor pointer

            span.day
                color white
                font-size 32px

            span.month
                color darken(white, 10%)

        span.day
            color tomato
            display block
            font-size 24px
            text-align center
            line-height 24px

        span.month
            color lighten(black, 30%)
            font-size 14px
            text-align center
            display block
            text-transform uppercase
            line-height 14px
