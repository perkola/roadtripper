.planner

    &__add-city

        &__input
            align(horizontal)
            margin-top 20px

            & > input
                padding 10px
                border none
                font-family font-brand
                line-height 1.5
                font-size 14px
                width 200px
                height 18px
                margin-right 10px

            & > button
                border none
                padding 9px
                padding-bottom 10px
                background brand
                margin 0
                color white
                transition all 0.25s ease
                cursor pointer
                font-size 14px
                line-height 1.4
                font-family font-brand
                margin-right 10px

                i
                    font-size 16px
                    vertical-align top
                    line-height 18px

                &:hover
                    background lighten(brand, 33%)


.planner-cities
    display flex
    padding 0 20px

.roadtrip-city
    width 300px
    margin-top 80px
    float left
    transition all 0.5s ease
    z-index 1

    &:first-child
        padding-left 20px

    &:last-child &__transition
        display none

    &__content
        span(3/4)
        background white
        transition all 0.25s ease
        position relative

        length = length(colors) - 1

        for num in (0..length)
            &.color-{num} &__title
                background colors[num]

        &__close
            position absolute
            right 10px
            top 10px
            color white
            cursor pointer
            z-index 9999

        &__title
            font-family font-special
            color white
            font-weight 400
            font-size 32px
            text-align center
            position relative

            .increment
                position absolute
                right 10px
                bottom 10px
                color white
                cursor pointer
                height 24px
                line-height 24px

            .decrement
                position absolute
                left 10px
                bottom 10px
                color white
                cursor pointer
                height 24px
                line-height 24px

            & > span
                display block
                color rgba(white, 0.8)
                padding-top 20px
            & > div span
                font-family font-brand
                font-size 16px
                line-height 24px
                padding-bottom 10px
                display inline-block
                font-weight bold

        &__content
            box-sizing border-box
            padding 20px
            .activities
                font-weight bold
                color black
            .activity
                transition all 0.25s ease
                color black
            &__add-activity
                margin-top 10px
                position relative
                transition all 0.5s ease
                &__icon
                    display block
                    vertical-align middle
                    color rgba(black, 0.4)
                    background darken(white, 10%)
                    padding 4px
                    text-align center
                    margin 0
                &__input
                    padding 8px
                    border none
                    font-family font-brand
                    line-height 1.5
                    font-size 14px
                    height 18px
                    width 137px
    &__transition
        position relative
        height 430px
        span(1/4)
        background rgba(white, 0)
        &__time
            font-family font-special
            background rgba(white, 0)
            width 100%
            color white
            text-align center
            font-size 18px
            align()
            padding 20px
            & > span
                display block
                i
                    font-size 24px
    &__location
      font-family sans-serif
      font-size 10px
