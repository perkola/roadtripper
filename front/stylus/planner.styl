.planner
  &__add-city
    &__input
      align(horizontal)
      margin-top 20px

      & > input
          padding 10px
          border none
          font-family font-brand
          line-height 1.5
          font-size 14px
          width 200px
          height 18px
          margin-right 10px

      & > button
          border none
          padding 9px
          padding-bottom 10px
          background brand
          margin 0
          color white
          transition all 0.25s ease
          cursor pointer
          font-size 14px
          line-height 1.4
          font-family font-brand

.planner-cities
  display flex
  padding-left 20px
.roadtrip-city
  width 300px
  height 200px
  margin-top 80px
  float left
  &__content
    height 100%
    span(3/4)
    background white
    &.color-0 &__title
      background #C42E8F
    &.color-1 &__title
      background #5AB433
    &.color-2 &__title
      background #2B6485
    &__title
      background brand
      font-family font-special
      color white
      font-weight 400
      font-size 32px
      text-align center
      & > span
          display block
          color rgba(white, 0.8)
          padding 10px
      & > div
          cf()
      & > div button
          border 0
          background rgba(white, 0)
          color white
          column(1/4)
          padding 5px
      & > div span
          font-family font-brand
          font-size 16px
          line-height 36px
          column(1/2)
          font-weight bold
    &__content
      box-sizing border-box
      padding 5px
  &__transition
    position relative
    height 100%
    span(1/4)
    &__time
      dispay block
      font-family font-special
      font-size 18px
      color white
      align()
      & > span
        display block
        text-align center
      i
          font-size 36px
  &__activities
    &__location
      font-family sans-serif
      font-size 10px
