.planner
  &__add-city
    &__input
      align(horizontal)

.planner-cities
  display flex
.roadtrip-city
  width 300px
  height 200px
  float left
  &__content
    height 100%
    span(3/4)
    background white
    &__title
      background brand
      font-family font-special
      color white
      font-weight 400
      font-size 32px
      text-align center
    &__content
      box-sizing border-box
      padding 5px
  &__transition
    position relative
    height 100%
    span(1/4)
    &__time
      font-family sans-serif
      align()
  &__activities
    &__location
      font-family sans-serif
      font-size 10px
