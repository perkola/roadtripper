.roadtrip-city
    width 400px
    height 200px
    float left
    &__content
      height 100%
      span(2/3)
      background brand
      box-sizing border-box
      padding 5px
    &__transition
      position relative
      height 100%
      span(1/3)
      &__travel-line
        width 60%
        height 2px
        background black
        align()
      &__time
        font-family sans-serif
        align()
    &__activities
      &__location
        font-family sans-serif
        font-size 10px
