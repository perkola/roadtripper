brand = tomato
white = #f0f0f0
black = #303030

font-brand   = 'Amaranth', sans-serif
font-special = 'Amaranth', sans-serif

@import 'jeet'
@import 'datepicker'
@import 'city'
@import 'planner'

body
    margin 0
    background white
    color black
    font-family font-brand
    //background: url('pexels-photo.jpg') center center no-repeat
    background: -webkit-gradient(linear, left top, right bottom, color-stop(0%,rgba(brand, 0.2)), color-stop(100%,rgba(brand, 0.3))), url('pexels-photo.jpg') center center no-repeat;

.intro

    &__content
        center(500px)

    &__pick
        width 500px

    &__title
        font-family font-special
        color white
        text-transform uppercase
        font-size 72px
        letter-spacing 2px
        margin 0
        line-height 1
        text-align center

h2
    font-family font-special
    color lighten(brand, 66%)
    font-weight 400
    font-size 32px
    text-align center

.date-from, .date-to
    column(1/2)

p.intro__go
    text-align center

.go-btn
    color brand
    text-decoration none
    border none
    padding 15px
    line-height 1
    font-size 32px
    font-family font-special
    display inline-block
    margin-top 15px


.timeline
    //align(horizontal)
    position absolute
    bottom 0
    display flex
    flex-direction row
    width 100%

    &__date
        font-family font-brand
        line-height 1
        padding 10px
        flex 1
        transition all 0.25s ease

        &:nth-child(even)
            background darken(white, 5%)

        &:hover
            background brand
            cursor pointer

            span.day
                color white
                font-size 32px

            span.month
                color darken(white, 10%)

        span.day
            color tomato
            display block
            font-size 24px
            text-align center
            line-height 24px

        span.month
            color lighten(black, 30%)
            font-size 14px
            text-align center
            display block
            text-transform uppercase
            line-height 14px
