.navbar
    background white
    height 50px
    width 100%

    &__logo
        display inline-block
        font-family font-special
        font-size 28px
        height 50px
        line-height 50px
        margin 0
        padding 0 10px
        text-transform uppercase

        a
            color lighten(black, 20%)
            text-decoration none

    &__city-search
        display inline
        transition all 0.5s ease
        position absolute
        align(horizontal)
        top 0
        z-index 9998 !important

        &.test
            align()

        span
            display block
            color white
            font-family font-brand
            font-size 18px
            width 100%
            text-align center

        input[type="text"]
            height 50px
            line-height 50px
            border none
            font-size 16px
            padding 0 15px
            margin 0
            width 250px
            outline none

        .predictions
            position absolute
            width 280px
            overflow hidden
            z-index 9999 !important

        .prediction
            display block
            padding 5px 15px
            background white
            color black
            text-align left
            cursor pointer
            z-index 9999 !important

        .prediction--selected
            background darken(white, 20%)

        button
            background brand
            border none
            color white
            height 50px
            padding 0
            margin 0
            font-size 16px
            line-height 50px
            padding 0 15px
            cursor pointer
            transition all 0.25s ease

            &:hover
                background lighten(brand, 20%)

            i
                vertical-align middle
                position relative
                bottom 2px

    &__button
        cursor pointer
        float right
        height 50px
        line-height 50px
        font-size 16px
        padding 0 20px
        background info
        color white
        transition all 0.25s ease

        &:hover
            background lighten(info, 20%)

        i
            vertical-align middle
            font-size 18px
            position relative
            bottom 2px

.expand-transition {
    position absolute
    bottom 60px
    opacity 1
    transition all 0.25s ease
}

/* .expand-enter defines the starting state for entering */
/* .expand-leave defines the ending state for leaving */
.expand-enter, .expand-leave {
    opacity 0
}
