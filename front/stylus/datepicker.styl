.datepicker
    width auto
    display block

    &__selected
        background white
        color black
        text-align left
        font-family font-brand
        font-size 14px
        padding 10px
        line-height 20px
        cursor pointer

        i
            float right
            font-size 20px

    &__mask
        position fixed
        z-index 9998
        top 0
        left 0
        width 100%
        height 100%
        display: table
        transition opacity .3s ease
        background-color rgba(black, 0.5)

    &__wrapper
        display table-cell
        vertical-align middle

    &__container
        background white
        z-index 9999
        width 300px
        margin 0px auto
        position relative

        .datepicker__close
            position absolute
            right 10px
            top 10px
            color white
            cursor pointer
            z-index 9999

        .datepicker__heading
            background brand
            text-align center
            padding 10px
            color white
            font-size 20px
            font-family font-special
            position relative

            h1
                display block

            span
                display inline-block
                line-height 32px
                margin 0
                padding 0
                vertical-align middle
                display inline-flex

                i
                    font-size 32px
                    cursor pointer

        .datepicker__calendar__weekdays
            display flex
            flex-direction row

        .datepicker__calendar__weekday
            flex 1
            padding 10px 0
            text-align center
            background lighten(brand, 20%)
            color white

        .datepicker__calendar__days
            display flex
            flex-direction row
            flex-wrap wrap
            font-family font-brand

        .datepicker__calendar__day
            flex 1
            padding 20px
            position relative
            cursor pointer
            color black
            transition all 0.25s ease

            &:hover
                background brand
                color white

            &--shade
                background darken(white, 10%)

            &--today:after
                    position absolute
                    bottom 0
                    right 0
                    content ''
                    display block
                    width 0
                    height 0
                    border-top 20px solid transparent
                    border-bottom 10px solid lighten(brand, 20%)
                    border-left 10px solid transparent

            &--selected
                background lighten(brand, 20%)
                color white

            span
                position absolute
                align()

.modal-enter, .modal-leave {
  opacity: 0;
}
